<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/gifImageView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/animatedgirl"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menstration date"
            android:textSize="25sp"
            android:id="@+id/loadmensdatez_fertily"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#68329b"
            android:letterSpacing="0.03"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertily period range"
            android:textSize="25sp"
            android:id="@+id/fertily_period"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#68329b"
            android:letterSpacing="0.03"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pregnancy period range"
            android:textSize="25sp"
            android:id="@+id/pregnancy_range"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#68329b"
            android:letterSpacing="0.03"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"/>




        <Button
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:text="Go Back"
            android:id="@+id/gobackzfer"
            android:textColor="#fff"/>





    </LinearLayout>
</ScrollView>